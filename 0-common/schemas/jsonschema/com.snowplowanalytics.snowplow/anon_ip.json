{
	"$schema": "http://json-schema.org/schema#",
	"description": "Schema for an IP anonymization enrichment",
	"self": {
		"vendor": "com.snowplowanalytics.snowplow",
		"name": "anon_ip",
		"format": "jsonschema",
		"version": "1-0-0"
	},

	"type": "object",
	"properties": {
		"vendor": {
			"type": "string"
		},
		"name": {
			"type": "string"
		},		
		"enabled": {
			"type": "boolean"
		},
		"parameters": {
			"type": "object",
			"properties": {
				"anonOctets": {
					"type": "number",
					"minimum": 1,
					"maximum": 4
				}
			},
			"required": ["anonOctets"],
			"additionalProperties": false
		}
	},
	"required": ["name", "vendor", "enabled", "parameters"],
	"additionalProperties": false
}
